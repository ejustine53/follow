<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="inputTexts">
        <item name="android:color">@color/input_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/inputs</item>

        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentLeft">true</item>

        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="heads">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/follow_heading</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="button">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/rect</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>




</resources>
